<Page
    x:Class="YourMoney.UWP.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding RegisterViewModel, Source={StaticResource ViewModelLocator}}"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center">
            <TextBox Text="{Binding UserName, Mode=TwoWay}" IsEnabled="{Binding IsUiEnabled}" PlaceholderText="User Name" Margin="10,0,10,10"/>
            <PasswordBox Password="{Binding Password, Mode=TwoWay}" IsEnabled="{Binding IsUiEnabled}" PlaceholderText="Password" Margin="10,0,10,10"/>
            <TextBox Text="{Binding Email, Mode=TwoWay}" PlaceholderText="Email" IsEnabled="{Binding IsUiEnabled}" Margin="10,0,10,10"/>
            <Button Command="{Binding RegisterCommand}" IsEnabled="{Binding IsUiEnabled}" HorizontalAlignment="Stretch" Margin="10,0">Register</Button>
        </StackPanel>
    </Grid>
</Page>
